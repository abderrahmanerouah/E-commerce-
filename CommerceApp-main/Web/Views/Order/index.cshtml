@model IEnumerable<Web.Models.OrderModel>


@if (ViewData.ModelState.ErrorCount == 0)
{
    <div class="text-right">
        <p>
            <a asp-action="Index" asp-controller="Product" class="btn btn-primary">Product List</a>
        </p>
    </div>
}

<div asp-validation-summary="All">
</div>
<div class="card">
    <div class="card-header">
        <p class="text-right">
            <div class="card-title">Orders List</div>
        </p>
    </div>
    <div class="card-body">

      

            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>ProductName</th>
                        <th>CategoryName</th>
                        <th>Price</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>IsActive</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Id</td>
                        <td style="width:200px;">
                        </td>
                        <td>@item.productId</td>
                        <td>@item.userId</td>

                        <td>

                            <a asp-action="Create" asp-controller="Order" asp-route-id="@item.Id" class="btn btn-info btn-sm">command</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        
    </div>
</div>